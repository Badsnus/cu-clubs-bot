service:
  database:
    host: "database"
    user: "user"
    password: "password"
    port: 5400
    name: "database"

  redis:
    host: "redis"
    password: "password"
    port: 6380

  smtp:
    domain: domain.ru
    host: smtp.domain.ru
    port: 587
    login: 3587
    pass: very-strong-password
    email: email@domain.ru

bot:
  token: "BOT_TOKEN"
  grant-chat-id: -500000
  admin-ids:
    - 500000000
  session:
    ttl: 45m
    auth-ttl: 10m
    email-ttl: 120m
    banner:
      auth: "file-id"
      menu: "file-id"
      club-owner: "file-id"
      events: "file-id"
  auth:
    grant-chat-id: -40000000
    valid-email-domains:
        - edu.centraluniversity.ru
        - centraluniversity.ru
  qr:
    chat-id: -400000000

settings:
    qr:
      logo-path: "./logo.png"

    timezone: "Europe/Moscow"
    logging:
      log-to-file: true # логирование в файл
      logs-dir: "./logs"
      timezone: "GMT+3" # часовой пояс для логирования
      debug: true # дебаг мод
      log-to-channel: true # логирование в канал
      channel-id: -10000000000 # канал для логов
      channel-log-level: 2 # от какого уровня лога будем отправлять его в канал
      locale: "ru"
